@page "/authentication/login"

@using Blazored.SessionStorage

@inject ISyncSessionStorageService store;

<h3>Authentification</h3>

<EditForm novalidate Model="@model" OnValidSubmit="@submit">
    <DataAnnotationsValidator />

    @*<div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <InputText @bind-Value="model.Email" class="form-control" />
            <ValidationMessage For="@(() => model.Email)" />
        </div>
    </div>*@

    <InputField Label="Login" @bind-Value="model.Email" placeholder="Votre login" @ref="MonChamp" />

    <InputField Label="Mot de passe" @bind-Value="model.Password" placeholder="Votre mot de passe" type="password" />
    

    <div @ref="maDiv">
        <button type="submit" class="btn btn-primary">Se connecter</button>
    </div>
</EditForm>

@code {
    private LoginViewModel model = new LoginViewModel { Email = "", Password = "" };

    private ElementReference maDiv;

    private InputField MonChamp;

    private void submit()
    {
        //call server
        //Console.WriteLine(model.Email);
        var user = new User { Fullname = "Bob", Email = model.Email };
        store.SetItem("USER", user);
    }
}
