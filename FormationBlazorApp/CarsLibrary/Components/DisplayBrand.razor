@inject BrandsService brandServ
@if (brand != null)
{
    @brand?.Name
}
else
{
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}


@code {
    private Brand brand;

    [Parameter]
    public int? BrandID { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (BrandID != null)
        {
            brand = await brandServ.getByIDAsync(BrandID.Value);
        }
    }
}
